<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings"
             x:Class="CustomVisionClient.SettingsPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Prediction Key"
                   HorizontalOptions="Start" />

            <Entry x:Name="PredictionKeyEntry"
                   HorizontalOptions="Fill" />

            <Label Text="Project ID"
                   HorizontalOptions="Start" />

            <Entry x:Name="ProjectIdEntry"
                   HorizontalOptions="Fill" />

            <Label Text="Published Name"
                   HorizontalOptions="Start" />

            <Entry x:Name="PublishedNameEntry"
                   HorizontalOptions="Fill" />

            <Label Text="Endpoint"
                   HorizontalOptions="Start" />

            <Entry x:Name="EndpointEntry"
                   HorizontalOptions="Fill" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>